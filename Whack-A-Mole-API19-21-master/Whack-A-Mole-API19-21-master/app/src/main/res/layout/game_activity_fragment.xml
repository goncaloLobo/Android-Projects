<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="guigue.chris.whack_a_mole.Game$PlaceholderFragment"
    android:id="@+id/MainLayout">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="guigue.chris.whack_a_mole.ScoreBoardFragment"
        android:id="@+id/fragScoreBoard"
        tools:layout="@layout/fragment_score_board"
        android:layout_weight="5" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="guigue.chris.whack_a_mole.MolesFragment"
        android:id="@+id/fragMoleHoles"
        tools:layout="@layout/fragment_moles"
        android:layout_margin="10dp"
        android:layout_gravity="bottom"
        android:layout_weight="2" />
</LinearLayout>